<p style="color: green"><%= notice %></p>

<h1>All Users</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>University Name</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email%></td>
            <td><%= user.address%></td>
            <td><%= user.univ_id %></td>
            <td><%= link_to 'Show', user, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %></td>
            <td><%= button_to "Delete", user, method: :delete, class:'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New user", new_user_path, class: 'btn btn-outline-dark' %>
    <%= link_to "University", univs_path, class:'btn btn-outline-dark' %>

  </div>
</div>
<br>
